.container{
  margin: 20rpx;
  height: 100%;
  border-radius: 20rpx;
}
.empty{
  display:flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
  /* border: 1rpx solid black; */
  height: 480rpx;
}

.read_list {
  height: 160rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 3rpx solid #E0E3DA;
  border-radius: 20rpx;
  background-color: #ffffff;
  margin: 10rpx;
  padding: 30rpx;
}

.list_img {
  width: 200rpx;
  height: 160rpx;
  border-radius: 10rpx;
}

.text {
  font-size: 30rpx;
  font-weight: bold;
  width: 100%;
  margin-left: 25rpx;
  display: flex;
  flex-direction: column;
}

.author {
  font-size: 25rpx;
  word-break: break-all;
  color: #7a7878;
  margin-top: 30rpx;
}

.footer{
  font-size: small;
  text-align: center;
  margin-top: 30rpx;
  color: #b6b8b2;
}

.music_list {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 3rpx solid #E0E3DA;
  background-color: #ffffff;
  padding: 30rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
}

.icon{
  width: 100rpx;
  height: 80rpx;
}
.music_img {
  width: 100rpx;
  height: 100rpx;
}