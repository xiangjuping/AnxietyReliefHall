<!--pages/listen/listen.wxml-->
<view class="head">
  <image class="shouyin" src="https://636c-cloud1-2g80dbl090309d49-1307246739.tcb.qcloud.la/imgs/radio_2.png"></image>
  <text class="xdt">小电台</text>
  <text class="ts">别忘了没人的时候还有我陪你哦~</text>
</view>

<view class="content">
  <view>
    <image class="wenjianimg" src="../../../images/folder.png"></image>
    <text class="wenjian_text">全部文件</text>
  </view>

  <view wx:for="{{list}}" wx:key="index">
    
    <view class="read_list" bindtap="tomusicPage" data-id="{{item._id}}">
      <image class="list_img" src="{{item.img}}"></image>
      <view class="text">
        <text>{{item.title}} </text>
        <text class="author">{{item.author}}</text>
      </view>
      <image class="icon" src="../../../images/play.png"></image>
    </view>

  </view>
</view>