page{
  width: 100%;
  height: 100%;
}
.container{
  flex-flow:column nowrap;
  justify-content: center;
  height: 1150rpx;
  border: 3rpx solid #E0E3DA;
  box-shadow:5rpx 5rpx 5rpx 5rpx #E0E3DA;
  background-color: #ffffff;
  display: flex;
  margin:0 30rpx 0 30rpx;
  border-radius: 20rpx;
}
.title{
  margin: 20rpx;
  width: 90%;
  text-align: left;
  height: 60rpx;
  font-size: 38rpx;
  border-top: 1px solid #f5f5f5;
}
.row{
  flex: 1;
  display: flex;
  width: 90%;
  height:100%;
  margin: 0 5%;
  overflow: hidden;
}

.row .text{
  margin-top:20rpx;
  flex: 1;
  width: 100%;
  height: 100%;/*textarea的高度*/
  font-size: 32rpx;
  line-height: 60rpx;
  color: #000000;    
}
.date{
  padding: 5rpx 0;
}

.btn{
  display: block;
  margin: 20rpx 40rpx 40rpx 20rpx;
  text-align: right;
}